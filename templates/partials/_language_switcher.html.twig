<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="dropdown-language" role="button"
       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span><img style="margin-right: 5px" src="{{ current.flag }}" width="30px"
                                                        alt="{{ current.code }}"> {{ current.name }}</span>
    </a>
    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-language">
        {% for language in languages %}
            <li>
                <a class="dropdown-item" href="{{ path(url, {_locale: language.code}) }}">
                    <img style="margin-right: 5px" src="{{ language.flag }}" width="30px"
                         alt="{{ language.code }}">
                    {{ language.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</li>